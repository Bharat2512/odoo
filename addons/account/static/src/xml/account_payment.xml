<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="ShowPaymentInfo">
        <div>
            <t t-if="outstanding">
                <div>
                    <strong class="pull-left" style="color:darkgrey;"><t t-esc="title"></t></strong>
                </div>
            </t>
            <table style="width:80%; margin-left:20%;">
            <t t-foreach="lines" t-as="line">
                <tr>
                    <td style="text-align:right;">
                        <a title="assign to invoice" class="oe_form_field outstanding_credit_assign" t-att-data-id="line.id"><i class="fa fa-check"></i></a>
                    </td>
                    <td style="text-align:right;">
                        <span class="oe_form_field"><t t-esc="line.ref"></t></span>
                    </td>
                    <td style="text-align:right;">
                        <span class="oe_form_field oe_form_field_float oe_form_field_monetary"><t t-esc="line.amount"></t> <t t-esc="line.currency"></t></span>
                    </td>
                </tr>
            </t>
            </table>
        </div>
    </t>

</templates>