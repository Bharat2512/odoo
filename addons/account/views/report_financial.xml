<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_financial">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2 t-esc="get_title"/>

                <div class="row mt32 mb32">
                    <div class="col-xs-3">
                        <strong>Chart of Accounts:</strong>
                        <p t-esc="get_account"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Fiscal Year:</strong>
                        <p t-esc="get_fiscalyear"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Filter By:</strong>
                        <p>
                            <span t-if="get_filter == 'filter_no'">Not filtered</span>
                            <span t-if="get_filter == 'filter_date'">Filtered by date</span>
                            <p t-if="get_filter == 'filter_date'">
                                Date from : <span t-esc="get_start_date"/><br />
                                Date to : <span t-esc="get_end_date"/>
                            </p>
                        </p>
                    </div>
                    <div class="col-xs-3">
                        <strong>Target Moves:</strong>
                        <p t-esc="get_target_move"/>
                    </div>
                </div>

                <table class="table table-condensed" t-if="get_debit_credit">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-right">Debit</th>
                            <th class="text-right">Credit</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="get_lines" t-as="a">
                            <t t-if="a['level'] != 0">
                                <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
                                <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>

                                <td>
                                    <span style="color: white;" t-esc="'..' * a.get('level', 0)"/>
                                    <span t-att-style="style" t-esc="a.get('name')"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;">
                                    <span t-att-style="style" t-esc="a.get('debit')"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;">
                                    <span t-att-style="style" t-esc="a.get('credit')"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;">
                                    <span t-att-style="style" t-esc="a.get('balance')"/>
                                </td>
                            </t>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-condensed" t-if="not get_enable_filter and not debit_credit">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="get_lines" t-as="a">
                            <t t-if="a['level'] != 0">
                                <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
                                <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>

                                <td>
                                    <span style="color: white;" t-esc="'..' * a.get('level', 0)"/>
                                    <span t-att-style="style" t-esc="a.get('name')"/>
                                </td>
                                <td class="text-right"><span t-att-style="style" t-esc="a.get('balance')"/></td>
                            </t>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-condensed" t-if="get_enable_filter and not get_debit_credit">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-right">Balance</th>
                            <th class="text-right"><span t-esc="get_label_filter"/></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="get_lines" t-as="a">
                            <t t-if="a['level'] != 0">
                                <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
                                <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>

                                <td>
                                    <span style="color: white;" t-esc="'..' * a.get('level', 0)"/>
                                    <span t-att-style="style" t-esc="a.get('name')"/>
                                </td>
                                <td class="text-right"><span t-att-style="style" t-esc="a.get('balance')"/></td>
                                <td class="text-right"><span t-att-style="style" t-esc="a.get('balance_cmp')"/></td>
                            </t>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
