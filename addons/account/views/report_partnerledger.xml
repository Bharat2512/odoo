<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="partnerledgerheader">
    <h2>Partner Ledger</h2>
    <div class="row">
        <div class="col-xs-3">
            <strong>Chart of Accounts:</strong>
            <p t-esc="get_account(data)"/>
        </div>
        <div class="col-xs-3">
            <strong>Fiscal Year:</strong>
            <p t-esc="get_fiscalyear(data)"/>
        </div>
        <div class="col-xs-3">
            <strong>Journals:</strong>
            <p t-esc="', '.join([ lt or '' for lt in get_journal(data) ])"/>
        </div>
        <div class="col-xs-3">
            <strong>Partner's</strong>
            <p t-esc="get_partners()"/>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <strong>Filter By:</strong>
            <p>
                <span t-if="data['form']['filter'] == 'filter_no'">Not filtered</span>
                <span t-if="data['form']['filter'] == 'filter_date'">Filtered by date</span>
                <p t-if="data['form']['filter'] == 'filter_date'">
                    Date from : <span t-esc="get_start_date(data)"/><br />
                    Date to : <span t-esc="get_end_date(data)"/>
                </p>
            </p>
        </div>
        <div class="col-xs-3">
            <strong>Target Moves:</strong>
            <p t-esc="get_target_move(data)"/>
        </div>
    </div>
</template>

<template id="partnerledgerdataheader">
    <thead>
        <tr>
            <th>Date</th>
            <th>JRNL</th>
            <th>Ref</th>
            <th>Account</th>
            <th>Entry Label</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Balance</th>
            <th t-if="amount_currency">Currency</th>
        </tr>
    </thead>
</template>

<template id="partnerledgerdata">
    <tbody>
        <tr>
            <td colspan="5">
                <strong t-esc="partner.ref"/>
                - <strong t-esc="partner.name"/>
            </td>
            <td class="text-right">
                <strong t-esc="sum_debit_partner(partner)"/>
            </td>
            <td class="text-right">
                <strong t-esc="sum_credit_partner(partner)"/>
            </td>
            <td class="text-right">
                <strong t-esc="sum_debit_partner(partner) - sum_credit_partner(partner)"/>
            </td>
        </tr>
        <tr t-if="initial_balance">
            <td colspan="5">Initial Balance</td>
            <td>
                <span t-esc="get_intial_balance(partner)[0][0]"/>
            </td>
            <td>
                <span t-esc="get_intial_balance(partner)[0][1]"/>
            </td>
            <td>
                <span t-esc="get_intial_balance(partner)[0][2]"/>
            </td>
        </tr>
        <tr t-foreach="get_lines(partner)" t-as="line">
            <td>
                <span t-esc="line['date']"/>
            </td>
            <td>
                <span t-esc="line['code']"/>
            </td>
            <td>
                <span t-esc="line['move_name']"/>
            </td>
            <td>
                <span t-esc="line['a_code']"/>
            </td>
            <td>
                <span t-esc="line['ref']"/>-<span t-esc="line['name']"/>
            </td>
            <td class="text-right">
                <span t-esc="line['debit']"/>
            </td>
            <td class="text-right">
                <span t-esc="line['credit']"/>
            </td>
            <td class="text-right">
                <span t-esc="line['progress']"/>
            </td>
            <td t-if="amount_currency">
                <span t-esc="line['amount_currency']"/>
            </td>
        </tr>
    </tbody>
</template>

<template id="report_partnerledger">
    <t t-call="report.html_container">
        <t t-if="data['form']['page_split']">
            <t t-foreach="docs" t-as="partner">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <t t-call="account.partnerledgerheader"/>
                        <table class="table table-condensed">
                            <t t-call="account.partnerledgerdataheader"/>
                            <t t-call="account.partnerledgerdata"/>
                        </table>
                    </div>
                </t>
            </t>
        </t>
        <t t-if="not data['form']['page_split']">
            <t t-call="report.internal_layout">
                <div class="page">
                    <t t-call="account.partnerledgerheader"/>
                    <table class="table table-condensed">
                        <t t-call="account.partnerledgerdataheader"/>
                        <t t-foreach="docs" t-as="partner">
                            <t t-call="account.partnerledgerdata"/>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>

</data>
</openerp>
