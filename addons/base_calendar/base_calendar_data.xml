<?xml version="1.0"?>
<openerp>
    <data>

        <record model="core.calendar" id="core_calendar_meeting">
            <field name="name">Meetings</field>
            <field name="type">vevent</field>
            <field name="date_mode">duration</field>
            <field name="color">#1f497d</field>
            <field name="model" ref="base_calendar.model_crm_meeting"/>
            <field name="action_id" ref="base_calendar.action_crm_meeting"/>
            <field name="field_name" ref="base_calendar.field_crm_meeting_name"/>
            <field name="field_date_start" ref="base_calendar.field_crm_meeting_date"/>
            <field name="field_date_end" eval="False"/>
            <field name="field_duration" ref="base_calendar.field_crm_meeting_duration"/>
            <field name="field_recurrent" ref="base_calendar.field_crm_meeting_recurrency"/>
            <field name="field_organizer_id" ref="base_calendar.field_crm_meeting_user_id"/>
            <field name="field_location" ref="base_calendar.field_crm_meeting_location"/>
            <field name="field_attendee_ids" eval="[(6, 0, [ref('base_calendar.field_crm_meeting_user_id'),ref('base_calendar.field_crm_meeting_partner_ids')])]"/>
            <field name="field_state" ref="base_calendar.field_crm_meeting_state"/>
            <field name="states_tentative">draft</field>
            <field name="states_confirm">open</field>
            <field name="states_cancel"></field>
        </record>

    </data>
    <data noupdate="1">

