<?xml version="1.0" encoding="utf-8"?>
<openerp>
   <data noupdate="0">
       <record model="res.groups" id="base.group_survey_user">
            <field name="name">Survey / User</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
       </record>
   </data>
    <data noupdate="0">

        <record model="ir.rule" id="calendar_user_see_own_meetings">
            <field name="name">Calendar User - See own meetings</field>
            <field name="model_id" ref="model_crm_meeting"/>
            <field name="domain_force">['|', ('user_id', '=', user.id),('partner_ids', 'in', [user.partner_id.id])]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('core_calendar.group_core_calendar_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="calendar_user_edit_own_meetings">
            <field name="name">Calendar User - Edit own meeting</field>
            <field name="model_id" ref="base_calendar.model_crm_meeting"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('core_calendar.group_core_calendar_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record model="ir.rule" id="calendar_user_see_all_meetings">
            <field name="name">Calendar User (All Events) - See all meetings</field>
            <field name="model_id" ref="model_crm_meeting"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('core_calendar.group_core_calendar_user_all_events'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="calendar_user_edit_all_meetings">
            <field name="name">Calendar Manager - Edit all meeting</field>
            <field name="model_id" ref="base_calendar.model_crm_meeting"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('core_calendar.group_core_calendar_manager'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</openerp>
