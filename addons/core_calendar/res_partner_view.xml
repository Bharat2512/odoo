<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

       <record id="view_base_calendar_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.base_calendar</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <page string="History" position="before">
                    <page string="Calendar">
                        <group>
                            <group>
                                <field name="tz"/>
                                <label for="calendar_id"/>
                                <div>
                                    <field name="calendar_id"/>
                                    <button type="action" name="%(core_calendar.action_partner_leaves)d"
                                            string="(=> configure leaves/holidays)" class="oe_link"/>
                                </div>
                            </group>
                            <group>
                                <field name="attendee_type"/>
                                <field name="attendee_external"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
       </record>


    </data>
</openerp>