<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_enterprise_config_settings" model="ir.ui.view">
        <field name="name">crm enterprise settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="crm.view_sale_config_settings"/>
        <field name="priority" eval="32"/>
        <field name="arch" type="xml">
            <group name="config_alias" position="after">
                <group>
                    <field name="voip_integration" class="oe_inline" widget="upgrade_radio"/>
                    <field name="contracts_management" class="oe_inline" widget="upgrade_radio"/>
                    <field name="esign" class="oe_inline" widget="upgrade_radio"/>
                    <field name="digital_product" class="oe_inline" widget="upgrade_radio"/>
                    <field name="customer_portal" class="oe_inline" widget="upgrade_radio"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
