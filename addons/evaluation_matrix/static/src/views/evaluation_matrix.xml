<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="comparison_factor_children">
        <t t-foreach="comp_factor_children" t-as="comp_factor_child">
            <tr t-attf-class="child_row_#{comp_factor_child.parent_id}">
                <td><span class="children_name_in_table"><t t-esc="comp_factor_child.name"/></span></td>
                <td></td>
                <td></td>
                <td class="ponderation">
                    <t t-esc="comp_factor_child.ponderation"/>
                    <span class="pond"> 
                        <a href='#'>
                            <i style='color:green' class='fa fa-arrow-circle-o-up fa-2x'></i>
                        </a> 
                        <a href='#'>
                            <i style='color:red' class='fa fa-arrow-circle-o-down fa-2x'></i>
                        </a>
                    </span>
                </td>
                <t t-foreach="comparison_products" t-as="comparison_product">
                    <td class="center-text-cell">
                        <div t-attf-class="#{comparison_results[comp_factor_child.id][comparison_product.id] &gt; 80 ? 'child-votes-green' : comparison_results[comp_factor_child.id][comparison_product.id] &lt; 40 ? 'child-votes-red' : 'child-votes-blue'}">
                            <span>
                                <t t-esc="comparison_results[comp_factor_child.id][comparison_product.id]"/> 
                            </span> %
                        </div>
                    </td>
                </t>
            </tr>
        </t>
    </t>
</templates>
