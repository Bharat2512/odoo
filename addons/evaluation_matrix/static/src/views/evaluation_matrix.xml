<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="comparison_factor_children">
        <t t-foreach="comp_factor_children" t-as="comp_factor_child">
            <tr t-attf-class="child_row_#{comp_factor_child.parent_id}">
                <td><span class="children_name_in_table"><t t-esc="comp_factor_child.name"/></span></td>
                <td></td>
                <td></td>
                <td><t t-esc="comp_factor_child.ponderation"/></td>
                <t t-foreach="comparison_products" t-as="comparison_product">
                    <td><t t-esc="comparison_results[comp_factor_child.id][comparison_product.id]"/>%</td>
                </t>
            </tr>
        </t>
    </t>
</templates>
