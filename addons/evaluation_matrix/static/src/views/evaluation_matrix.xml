<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="comparison_factor_children">
        <t t-foreach="comp_factor_children" t-as="comp_factor_child">
            <tr t-attf-class="child_row_#{comp_factor_child.parent_id}">
                <td><span class="children_name_in_table"><t t-esc="comp_factor_child.name"/></span></td>
                <td></td>
                <td></td>
                <td class="ponderation">
                    <t t-esc="comp_factor_child.ponderation"/>
                    <span class="pond"> 
                        <a href='#'>
                            <i style='color:green' class='fa fa-arrow-circle-o-up fa-2x'></i>
                        </a> 
                        <a href='#'>
                            <i style='color:red' class='fa fa-arrow-circle-o-down fa-2x'></i>
                        </a>
                    </span>
                </td>
                <t t-foreach="comparison_products" t-as="comparison_product">
                    <td class="center-text-cell">
                        <div t-attf-class="#{comparison_results[comp_factor_child.id][comparison_product.id] &gt; 80 ? 'child-votes-green' : comparison_results[comp_factor_child.id][comparison_product.id] &lt; 40 ? 'child-votes-red' : 'child-votes-blue'}">
                            <span>
                                <t t-esc="comparison_results[comp_factor_child.id][comparison_product.id]"/> 
                            </span> %
                        </div>
                    </td>
                </t>
            </tr>
        </t>
    </t>

    <t t-name="comparison_create_criterion">
        <div class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Create a criterion</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label for="selectCat" class="col-sm-2 control-label">Category</label>
                                <div class="col-sm-10">
                                    <select class="form-control select-cat" id="selectCat">
                                        <t t-foreach="comparison_categories" t-as="comparison_category">
                                            <option t-att-value="comparison_category.id"><t t-esc="comparison_category.name"/></option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control name" id="inputName"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputNote" class="col-sm-2 control-label">Note</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control note" rows="3" id="inputNote"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary create">Create</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </t>
</templates>
