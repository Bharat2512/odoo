<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="core.calendar" id="core_calendar_event_seance">
            <field name="name">Event seances</field>
            <field name="type">vevent</field>
            <field name="date_mode">duration</field>
            <field name="color">#4f81bd</field>
            <field name="model" ref="event.model_event_seance"/>
            <field name="action_id" ref="event.action_event_seance"/>
            <field name="field_name" ref="event.field_event_seance_name"/>
            <field name="field_date_start" ref="event.field_event_seance_date_begin"/>
            <field name="field_date_end" eval="False"/>
            <field name="field_duration" ref="event.field_event_seance_duration"/>
            <field name="field_organizer_id" ref="event.field_event_seance_main_speaker_id"/>
            <field name="field_location" ref="event.field_event_seance_address_id"/>
            <field name="field_attendee_ids" eval="[(6, 0, [ref('event.field_event_seance_main_speaker_id'),ref('event.field_event_seance_address_id'),ref('event.field_event_seance_other_resource_ids')])]"/>
            <field name="field_event_ids" ref="event.field_event_seance_event_ids"/>
            <field name="filter_expr"></field>
            <field name="field_state" ref="event.field_event_seance_state"/>
            <field name="states_tentative">draft,planned</field>
            <field name="states_confirm">inprogress,closed,confirm,done</field>
            <field name="states_cancel">cancel</field>
        </record>

        <record model="ir.ui.view" id="view_core_calendar_form_events">
            <field name="name">core.calendar.form.events</field>
            <field name="model">core.calendar</field>
            <field name="inherit_id" ref="core_calendar.view_core_calendar_form"/>
            <field name="arch" type="xml">
                <field name="field_attendee_ids" position="after">
                    <field name="field_event_ids" domain="[('model_id','=',model),('ttype','in',('many2many','many2one')),('relation','=','event.event')]"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_core_calendar_event_calendar_if3">
            <field name="name">core.calendar.event.calendar.if3</field>
            <field name="model">core.calendar.event</field>
            <field name="inherit_id" ref="core_calendar.view_core_calendar_event_calendar"/>
            <field name="arch" type="xml">
                <field name="attendee_ids" position="after">
                    <field name="event_ids"/>
                </field>
                <xpath expr="//templates/t[@t-name='calendar-info-box']/t[2]" position="after">
                    <t t-if="record.event_ids.raw_value.length">
                        <span>Events: <field name="event_ids"/></span>
                    </t>
                </xpath>
            </field>
        </record>

        <record model="event.constraint" id="event_constraint_internal_speaker">
            <field name="name">Internal Speaker</field>
            <field name="type">int_resource</field>
            <field name="applies_to">speaker</field>
            <field name="mode">soft</field>
        </record>

        <record model="event.constraint" id="event_constraint_external_speaker">
            <field name="name">External Speaker</field>
            <field name="type">ext_resource</field>
            <field name="applies_to">speaker</field>
            <field name="mode">soft</field>
        </record>

    </data>
    <data noupdate="1">

        <record model="ir.cron" id="cron_event_seance_auto_terminate">
            <field name="name">Event Seance - Auto terminate past seance</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'event.seance'"/>
            <field name="function" eval="'_cron_auto_terminate_seance'"/>
            <field name="args" eval="'()'"/>
            <field name="active" eval="True"/>
        </record>

        <!-- After installation of the module, open the related menu -->
        <record id="action_client_event_menu" model="ir.actions.client">
            <field name="name">Open Event Menu</field>
            <field name="tag">reload</field>
            <field name="params" eval="{'menu_id': ref('event.event_main_menu')}"/>
        </record>
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_client_event_menu"/>
            <field name="state">open</field>
        </record>

        <!-- Event-related subtypes for messaging / Chatter -->
        <record id="event.mt_event_registration" model="mail.message.subtype">
            <field name="name">New Registration</field>
            <field name="res_model">event.event</field>
            <field name="default" eval="False"/>
        </record>

        <!-- notify all employees of module installation -->
        <function model="mail.group" name="message_post">
            <!-- ids, subject, body, parent_id=False, type='notification', content_subtype='html' -->
            <value eval="[ref('mail.group_all_employees')]"/>
            <value>From the top menu Events, you can organize events, manage registrations, automate communication around your event and sell events through your quotations.</value>
            <value>Module Events has been installed</value>
        </function>

        <!-- default registration stages -->
        <record id="event_regstage_draft" model="event.registration.stage">
            <field name="name">Unconfirmed</field>
            <field name="state">draft</field>
            <field name="sequence">1</field>
        </record>

        <record id="event_regstage_confirmed" model="event.registration.stage">
            <field name="name">Confirmed</field>
            <field name="state">open</field>
            <field name="sequence">2</field>
        </record>

        <record id="event_regstage_done" model="event.registration.stage">
            <field name="name">Attended</field>
            <field name="state">done</field>
            <field name="sequence">3</field>
            <field name="fold" eval="True"/>
        </record>

        <record id="event_regstage_cancel" model="event.registration.stage">
            <field name="name">Cancelled</field>
            <field name="state">cancel</field>
            <field name="sequence">4</field>
            <field name="fold" eval="True"/>
        </record>

    </data>
</openerp>
