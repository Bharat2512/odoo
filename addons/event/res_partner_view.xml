<?xml version="1.0"?>
<openerp>
    <data>

         <!--  Partners inherited form -->

       <record id="view_event_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.event.info.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="buttons" position="inside">
                    <button type="object" name="open_registrations" string="Registrations"/>
                    <button type="object" name="open_events" string="Events"/>
                    <button type="object" name="open_courses" string="Courses"
                            attrs="{'invisible': [('speaker','=',False)]}"/>
                </div>
                <xpath expr="//page[@string='Sales &amp; Purchases']" position="after">
                    <page string="Event">
                        <group>
                            <group>
                                <field name="speaker" on_change="onchange_event_role('speaker', speaker, room, equipment)"/>
                                <field name="room" on_change="onchange_event_role('room', speaker, room, equipment)"/>
                                <field name="equipment" on_change="onchange_event_role('equipment', speaker, room, equipment)"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <separator string="Courses" attrs="{'invisible': [('speaker','=',False)]}"/>
                        <field name="speakerinfo_ids" colspan="4" attrs="{'invisible': [('speaker','=',False)]}">
                            <tree string="Courses" editable="bottom">
                                <field name="course_id"/>
                                <field name="price_from"/>
                                <field name="price" attrs="{'readonly': [('price_from','!=','custom')]}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[@string='Internal Notes']" position="before">
                    <page string="Room" attrs="{'invisible': [('is_company','=',False)]}">
                        <field name="room_ids" mode="kanban" context="{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_room': 1}">
                                <kanban>
                                    <field name="color"/>
                                    <field name="name"/>
                                    <field name="title"/>
                                    <field name="email"/>
                                    <field name="parent_id"/>
                                    <field name="is_company"/>
                                    <field name="room"/>
                                    <field name="equipment"/>
                                    <field name="function"/>
                                    <field name="phone"/>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="zip"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="mobile"/>
                                    <field name="fax"/>
                                    <field name="state_id"/>
                                    <field name="has_image"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                            <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '')" style="position: relative">
                                                <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
                                                <div class="oe_module_vignette">
                                                <a type="open">
                                                    <t t-if="record.has_image.raw_value === true">
                                                        <img t-att-src="kanban_image('res.partner', 'image', record.id.value, {'preview_image': 'image_small'})" class="oe_avatar oe_kanban_avatar_smallbox"/>
                                                    </t>
                                                    <t t-if="record.image and record.image.raw_value !== false">
                                                        <img t-att-src="'data:image/png;base64,'+record.image.raw_value" class="oe_avatar oe_kanban_avatar_smallbox"/>
                                                    </t>
                                                    <t t-if="record.has_image.raw_value === false and (!record.image or record.image.raw_value === false)">
                                                        <t t-if="record.is_company.raw_value === true">
                                                            <img t-att-src='_s + "/base/static/src/img/company_image.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>
                                                        <t t-if="record.is_company.raw_value === false and record.room.raw_value === false and record.equipment.raw_value === false">
                                                            <img t-att-src='_s + "/base/static/src/img/avatar.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>
                                                        <t t-if="record.is_company.raw_value === false and record.room.raw_value !== false">
                                                            <img t-att-src='_s + "/event/static/src/img/room.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>
                                                        <t t-if="record.is_company.raw_value === false and record.equipment.raw_value !== false">
                                                            <img t-att-src='_s + "/event/static/src/img/equipment.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>

                                                    </t>
                                                </a>
                                                    <div class="oe_module_desc">
                                                        <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border">
                                                            <table class="oe_kanban_table">
                                                                <tr>
                                                                    <td class="oe_kanban_title1" align="left" valign="middle">
                                                                        <h4><a type="open"><field name="name"/></a></h4>
                                                                        <i><div t-if="record.function.raw_value">
                                                                            <field name="function"/></div></i>
                                                                        <div><a t-if="record.email.raw_value" title="Mail" t-att-href="'mailto:'+record.email.value">
                                                                            <field name="email"/>
                                                                        </a></div>
                                                                        <div t-if="record.phone.raw_value">Phone: <field name="phone"/></div>
                                                                        <div t-if="record.mobile.raw_value">Mobile: <field name="mobile"/></div>
                                                                        <div t-if="record.fax.raw_value">Fax: <field name="fax"/></div>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="Room" version="7.0">
                                    <sheet>
                                        <field name="image" widget='image' class="oe_avatar oe_left" options='{"preview_image": "image_medium"}'/>
                                        <div class="oe_title">
                                            <label for="name" class="oe_edit_only"/>
                                            <h1><field name="name" style="width: 70%%"/></h1>
                                            <field name="category_id" widget="many2many_tags" placeholder="Tags..." style="width: 70%%"/>
                                        </div>
                                        <group>
                                            <field name="email"/>
                                            <field name="phone"/>
                                        </group>
                                        <div>
                                            <field name="use_parent_address"/><label for="use_parent_address"/>
                                        </div>
                                        <group>
                                            <label for="type"/>
                                            <div name="div_type">
                                                <field class="oe_inline" name="type"/>
                                            </div>
                                            <label for="street" string="Address" attrs="{'invisible': [('use_parent_address','=', True)]}"/>
                                            <div attrs="{'invisible': [('use_parent_address','=', True)]}" name="div_address">
                                                <field name="street" placeholder="Street..."/>
                                                <field name="street2"/>
                                                <div class="address_format">
                                                    <field name="city" placeholder="City" style="width: 40%%"/>
                                                    <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)"/>
                                                    <field name="zip" placeholder="ZIP" style="width: 20%%"/>
                                                </div>
                                                <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}'/>
                                            </div>
                                        </group>
                                        <field name="room" invisible="True"/>
                                    </sheet>
                                </form>
                            </field>
                    </page>
                    <page string="Equipments" attrs="{'invisible': [('is_company','=',False)]}">
                        <field name="equipment_ids" mode="kanban" context="{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_equipment': 1}">
                                <kanban>
                                    <field name="color"/>
                                    <field name="name"/>
                                    <field name="title"/>
                                    <field name="email"/>
                                    <field name="parent_id"/>
                                    <field name="is_company"/>
                                    <field name="function"/>
                                    <field name="phone"/>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="zip"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="mobile"/>
                                    <field name="fax"/>
                                    <field name="state_id"/>
                                    <field name="has_image"/>
                                    <field name="room"/>
                                    <field name="equipment"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                            <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '')" style="position: relative">
                                                <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
                                                <div class="oe_module_vignette">
                                                <a type="open">
                                                    <t t-if="record.has_image.raw_value === true">
                                                        <img t-att-src="kanban_image('res.partner', 'image', record.id.value, {'preview_image': 'image_small'})" class="oe_avatar oe_kanban_avatar_smallbox"/>
                                                    </t>
                                                    <t t-if="record.image and record.image.raw_value !== false">
                                                        <img t-att-src="'data:image/png;base64,'+record.image.raw_value" class="oe_avatar oe_kanban_avatar_smallbox"/>
                                                    </t>
                                                    <t t-if="record.has_image.raw_value === false and (!record.image or record.image.raw_value === false)">
                                                        <t t-if="record.is_company.raw_value === true">
                                                            <img t-att-src='_s + "/base/static/src/img/company_image.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>
                                                        <t t-if="record.is_company.raw_value === false and record.room.raw_value === false and record.equipment.raw_value === false">
                                                            <img t-att-src='_s + "/base/static/src/img/avatar.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>
                                                        <t t-if="record.is_company.raw_value === false and record.room.raw_value !== false">
                                                            <img t-att-src='_s + "/event/static/src/img/room.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>
                                                        <t t-if="record.is_company.raw_value === false and record.equipment.raw_value !== false">
                                                            <img t-att-src='_s + "/event/static/src/img/equipment.png"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                                        </t>
                                                    </t>
                                                </a>
                                                    <div class="oe_module_desc">
                                                        <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border">
                                                            <table class="oe_kanban_table">
                                                                <tr>
                                                                    <td class="oe_kanban_title1" align="left" valign="middle">
                                                                        <h4><a type="open"><field name="name"/></a></h4>
                                                                        <i><div t-if="record.function.raw_value">
                                                                            <field name="function"/></div></i>
                                                                        <div><a t-if="record.email.raw_value" title="Mail" t-att-href="'mailto:'+record.email.value">
                                                                            <field name="email"/>
                                                                        </a></div>
                                                                        <div t-if="record.phone.raw_value">Phone: <field name="phone"/></div>
                                                                        <div t-if="record.mobile.raw_value">Mobile: <field name="mobile"/></div>
                                                                        <div t-if="record.fax.raw_value">Fax: <field name="fax"/></div>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="Equipment" version="7.0">
                                    <sheet>
                                        <field name="image" widget='image' class="oe_avatar oe_left" options='{"preview_image": "image_medium"}'/>
                                        <div class="oe_title">
                                            <label for="name" class="oe_edit_only"/>
                                            <h1><field name="name" style="width: 70%%"/></h1>
                                            <field name="category_id" widget="many2many_tags" placeholder="Tags..." style="width: 70%%"/>
                                        </div>
                                        <group>
                                            <field name="email"/>
                                        </group>
                                        <div>
                                            <field name="use_parent_address"/><label for="use_parent_address"/>
                                        </div>
                                        <group>
                                            <label for="type"/>
                                            <div name="div_type">
                                                <field class="oe_inline" name="type"/>
                                            </div>
                                            <label for="street" string="Address" attrs="{'invisible': [('use_parent_address','=', True)]}"/>
                                            <div attrs="{'invisible': [('use_parent_address','=', True)]}" name="div_address">
                                                <field name="street" placeholder="Street..."/>
                                                <field name="street2"/>
                                                <div class="address_format">
                                                    <field name="city" placeholder="City" style="width: 40%%"/>
                                                    <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)"/>
                                                    <field name="zip" placeholder="ZIP" style="width: 20%%"/>
                                                </div>
                                                <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}'/>
                                            </div>
                                        </group>
                                        <field name="equipment" invisible="True"/>
                                    </sheet>
                                </form>
                            </field>
                    </page>
                </xpath>
            </field>
       </record>

        <record id="view_res_partner_kanban_event" model="ir.ui.view">
            <field name="name">res.partner.kanban.event</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <field name="is_company" position="after">
                    <field name="room"/>
                    <field name="equipment"/>
                </field>
                <xpath expr="/kanban/templates/t[@t-name='kanban-box']/div/a/t[2]/t[2]" position="replace">
                    <t t-if="record.is_company.raw_value === false and record.room.raw_value === false and record.equipment.raw_value === false">
                        <img t-att-src='_s + "/base/static/src/img/avatar.png"' class="oe_kanban_image"/>
                    </t>
                    <t t-if="record.is_company.raw_value === false and record.room.raw_value !== false">
                        <img t-att-src='_s + "/event/static/src/img/room.png"' class="oe_kanban_image"/>
                    </t>
                    <t t-if="record.is_company.raw_value === false and record.equipment.raw_value !== false">
                        <img t-att-src='_s + "/event/static/src/img/equipment.png"' class="oe_kanban_image"/>
                    </t>
                </xpath>
            </field>
        </record>
        <!-- <record model="ir.ui.view" id="res_partner_kanban_view"> -->


        <record id="view_res_partner_search_event" model="ir.ui.view">
            <field name="name">res.partner.search.event</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <filter name="supplier" string="Suppliers" position="after">
                    <filter string="Speakers" name="speaker" domain="[('speaker','=',1)]" help="Speaker Partners"
                            context="{'default_speaker': 1}"/>
                    <filter string="Rooms" name="room" domain="[('room','=',1)]" help="Rooms"/>
                    <filter string="Equipments" name="equipment" domain="[('equipment','=',1)]" help="Equipments"/>
                </filter>
            </field>
        </record>

        <record id="action_event_library_resource" model="ir.actions.act_window">
            <field name="name">Resources</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_speaker': 1, 'search_default_room': 1, 'search_default_equipment': 1}</field>
        </record>

        <menuitem id="menu_event_library_resource"
                    parent="menu_event_library_root"
                    action="action_event_library_resource"/>

   </data>
</openerp>
