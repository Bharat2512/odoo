<?xml version="1.0"?>
<openerp>
    <data>

         <!--  Partners inherited form -->

       <record id="view_event_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.event.info.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="buttons" position="inside">
                    <button type="object" name="open_registrations" string="Registrations"/>
                    <button type="object" name="open_events" string="Events"/>
                    <button type="object" name="open_courses" string="Courses"
                            attrs="{'invisible': [('speaker','=',False)]}"/>
                </div>
                <xpath expr="//page[@string='Sales &amp; Purchases']" position="after">
                    <page string="Event">
                        <group>
                            <group>
                                <field name="speaker" on_change="onchange_event_role('speaker', speaker, room, equipment)"/>
                                <field name="room" on_change="onchange_event_role('room', speaker, room, equipment)"/>
                                <field name="equipment" on_change="onchange_event_role('equipment', speaker, room, equipment)"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <separator string="Courses" attrs="{'invisible': [('speaker','=',False)]}"/>
                        <field name="speakerinfo_ids" colspan="4" attrs="{'invisible': [('speaker','=',False)]}">
                            <tree string="Courses" editable="bottom">
                                <field name="course_id"/>
                                <field name="price_from"/>
                                <field name="price" attrs="{'readonly': [('price_from','!=','custom')]}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
       </record>

        <record id="view_res_partner_search_event" model="ir.ui.view">
            <field name="name">res.partner.search.event</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <filter name="supplier" string="Suppliers" position="after">
                    <filter string="Speakers" name="speaker" domain="[('speaker','=',1)]" help="Speaker Partners"
                            context="{'default_speaker': 1}"/>
                    <filter string="Rooms" name="room" domain="[('room','=',1)]" help="Rooms"/>
                    <filter string="Equipments" name="equipment" domain="[('equipment','=',1)]" help="Equipments"/>
                </filter>
            </field>
        </record>

        <record id="action_event_library_resource" model="ir.actions.act_window">
            <field name="name">Resources</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_speaker': 1}</field>
        </record>

        <menuitem id="menu_event_library_resource"
                    parent="menu_event_library_root"
                    action="action_event_library_resource"/>

   </data>
</openerp>
