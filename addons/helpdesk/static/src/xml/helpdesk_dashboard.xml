<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!--
        This template is the ribbon at the top of the helpdesk dashboard that adds
        some figures to it. We call this rubbon the "HelpdeskDashboard".
    -->
    <t t-name="helpdesk.HelpdeskDashboard">
        <div t-if="show_demo or values" class="o_helpdesk_dashboard">
            <div>
                <table class="table table-condensed">
                    <tr>
                        <td class="o_text">
                            <div class="o_highlight">My</div>
                            Tickets
                        </td>
                        <td class="o_main" title="Open my tickets">
                            <a href="#" class="o_dashboard_action" name="calendar.action_calendar_event">
                                <span class="o_highlight"><t t-esc="values['my_all']['count']"/></span><br/>
                                Tickets
                            </a>
                        </td>
                        <td class="o_main" title="My hight priority tickets">
                            <a href="#" class="o_dashboard_action" name="crm.action_your_pipeline">
                                <span class="o_highlight"><t t-esc="values['my_high']['count']"/></span><br/>
                                High Priorities
                            </a>
                        </td>
                        <td title="My urgent tickets" class="o_main">
                            <a href="#" class="o_dashboard_action" name="crm.action_your_pipeline">
                                <span class="o_highlight"><t t-esc="values['my_urgent']['count']"/></span><br/>
                                Urgent
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="o_text">Avg Hours</td>
                        <td class="o_main">
                            <a href="#" class="o_dashboard_action" name="calendar.action_calendar_event"><t t-esc="values['my_all']['hours']"/></a>
                        </td>
                        <td class="o_main">
                            <a href="#" class="o_dashboard_action" name="calendar.action_calendar_event">
                                <t t-esc="values['my_high']['hours']"/>
                            </a>
                        </td>
                        <td class="o_main">
                            <a href="#" class="o_dashboard_action" name="calendar.action_calendar_event">
                                <t t-esc="values['my_urgent']['hours']"/>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="o_text">SLA Failed</td>
                        <td t-att-class="values['my_all']['failed'] and 'o_warning'" title="View failed tickets">
                            <a href="#" class="o_dashboard_action" name="crm.crm_lead_action_activities" data-extra="overdue" t-if="values['my_all']['failed']">
                                <t t-esc="values['my_all']['failed']"/>
                            </a>
                        </td>
                        <td t-att-class="values['my_high']['failed'] and 'o_warning'" title="View high priority failed tickets">
                            <a href="#" class="o_dashboard_action" name="crm.crm_lead_action_activities" data-extra="overdue" t-if="values['my_high']['failed']">
                                <t t-esc="values['my_high']['failed']"/>
                            </a>
                        </td>
                        <td class="o_warning" title="View urgent failed tickets" t-if="values['my_urgent']['failed']">
                            <a href="#" class="o_dashboard_action" name="crm.crm_lead_action_activities" data-extra="overdue">
                                <t t-esc="values['my_urgent']['failed']"/>
                            </a>
                        </td>
                    </tr>
                </table>

            </div><div t-attf-class="#{show_demo ? 'o_demo' : ''}">
                <table class="hidden-xs table table-condensed">
                    <tr>
                        <td class="o_text">
                            <div class="o_highlight">Performance</div>
                            Today
                        </td>
                        <td title="Performance Report" t-att-class="(values['target']['count'] &lt;= values['today']['count'])?'o_main':'o_secondary'">
                            <a href="#" class="o_dashboard_action" name="crm.crm_activity_report_action">
                                <span class="o_highlight">
                                    <t t-esc="values['today']['count']"/>
                                </span><br/>
                                Closed Tickets
                            </a>
                        </td>
                        <td title="Customer satisfaction analysis" t-att-class="(values['target']['rating'] &lt;= values['today']['rating'])?'o_main':'o_secondary'">
                            <a href="#" class="o_dashboard_action" name="crm.crm_opportunity_report_action_graph">
                                <span class="o_highlight">
                                    <t t-esc="values['today']['rating']"/> / 5
                                </span><br/>
                                Customer Rating

                            </a>
                        </td>
                        <td title="Performance Report" t-att-class="(values['target']['success'] &lt;= values['today']['success'])?'o_main':'o_secondary'">
                            <a href="#" class="o_dashboard_action" name="account.action_account_invoice_report_all">
                                <span class="o_highlight">
                                    <t t-esc="values['today']['success']"/>%
                                </span><br/>
                                Success Rate
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="o_text">Avg 7 days</td>
                        <td t-att-class="(values['target']['count'] &lt;= values['7days']['count'])?'o_main':'o_secondary'">
                            <a href="#" class="o_dashboard_action" name="crm.crm_activity_report_action">
                                <t t-esc="values['7days']['count']"/>
                            </a>
                        </td>
                        <td t-att-class="(values['target']['rating'] &lt;= values['7days']['rating'])?'o_main':'o_secondary'">
                            <a href="#" class="o_dashboard_action" name="crm.crm_opportunity_report_action_graph">
                                <t t-esc="values['7days']['rating']"/> / 5
                            </a>
                        </td>
                        <td t-att-class="(values['target']['success'] &lt;= values['7days']['success'])?'o_main':'o_secondary'">
                            <a href="#" class="o_dashboard_action" name="account.action_account_invoice_report_all">
                                <t t-esc="values['7days']['success']"/>%
                            </a>
                        </td>
                    </tr><tr>
                        <td class="o_text">Daily Target</td>
                        <td class="o_secondary">
                            <t t-esc="values['target']['count']"/>
                        </td>
                        <td class="o_secondary">
                            <t t-esc="values['target']['rating']"/>
                        </td>
                        <td class="o_secondary">
                            <t t-esc="values['target']['success']"/>
                        </td>
                    </tr>
                </table>
            </div>

            <div t-if="show_demo" class="o_welcome_message">
                <div class="o_welcome_image">
                    <i class="fa fa-smile-o fa-5x"></i>
                </div>
                <div class="o_welcome_content">
                    <h2>Hi there.</h2>
                    <h4>Ready to boost your customer service?</h4>
                    <h4>Let's start by defining your first helpdesk team.</h4>
                    <a class="btn btn-primary o_dashboard_action" name="helpdesk.helpdesk_team_act_new">Setup a Team</a>
                </div>
            </div>
        </div>
    </t>
</templates>
