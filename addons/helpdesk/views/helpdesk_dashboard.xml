<odoo>
    <record id="action_helpdesk_team_ticket" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form,pivot,graph</field>
        <field name="domain">[('team_id','=',active_id)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click create a new ticket.
            </p>
        </field>
    </record>

    <record id="helpdesk_team_view_kanban" model="ir.ui.view" >
        <field name="name">helpdesk.team.dashboard</field>
        <field name="model">helpdesk.team</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_helpdesk_kanban" create="0">
                <field name="name"/>
                <field name="color"/>
                <field name="feature_email"/>
                <field name="feature_rating"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><field name="name"/></div>
                                    <small t-if="record.feature_email.value"><i class="fa fa-envelope-o"></i>&amp;nbsp; <field name="alias_id"/></small>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/></a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content o_visible">
                                <div class="row">
                                    <div class="col-xs-6 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="%(helpdesk.action_helpdesk_team_ticket)d" type="action">Tickets</button>
                                    </div>
                                    <div class="col-xs-6 o_kanban_primary_right">
                                        <div class="mb4">
                                            <a name="%(helpdesk.helpdesk_ticket_report_act)d" type="action">
                                                Performance Analysis
                                            </a>
                                        </div>
                                        <div class="mb4" t-if="record.feature_rating.raw_value">
                                            <a name="%(helpdesk.helpdesk_ticket_report_act)d" type="action">
                                                Customer Satisfaction
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div><div class="container o_kanban_card_manage_pane o_invisible">
                                <div class="row">
                                    <div class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_view">
                                        <div class="o_kanban_card_manage_title">
                                            <span>View Tickets</span>
                                        </div>
                                        <div>
                                            <a name="%(helpdesk.action_helpdesk_team_ticket)d" type="action">Unassigned</a>
                                        </div><div>
                                            <a name="%(helpdesk.action_helpdesk_team_ticket)d" type="action">Archived</a>
                                        </div><div>
                                            <a name="%(helpdesk.action_helpdesk_team_ticket)d" type="action">SLA Failed</a>
                                        </div><div>
                                            <a name="%(helpdesk.action_helpdesk_team_ticket)d" type="action">Unhappy Ratings</a>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_reports">
                                        <div class="o_kanban_card_manage_title">
                                            <span>Reports</span>
                                        </div>
                                    </div>
                                </div>

                                <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                    <div class="col-xs-8">
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                    <div class="col-xs-4 text-right">
                                        <a type="edit">Settings</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_helpdesk_team_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">helpdesk.team</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="helpdesk.helpdesk_team_view_kanban"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to define a new helpdesk team.
            </p><p>
                ...
            </p>
        </field>
    </record>
    <menuitem
        action="helpdesk.action_helpdesk_team_dashboard"
        id="menu_helpdesk_team_dashboard"
        sequence="5" parent="helpdesk.menu_helpdesk"/>



</odoo>
