<?xml version="1.0"?>
<openerp>

    <!-- Teams -->
    <record id="helpdesk_team_search" model="ir.ui.view">
        <field name="name">Search Teams</field>
        <field name="model">helpdesk.team</field>
        <field name="arch" type="xml">
            <search string="Team search">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="helpdesk_team_form" model="ir.ui.view">
        <field name="name">Helpdesk Teams</field>
        <field name="model">helpdesk.team</field>
        <field name="arch" type="xml">
            <form string="team search">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Subject..."/></h1>
                    </div>
                    <group string="Options">
                        <label for="id" string="Channels"/>
                        <div>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    Email
                                </div>
                            </button>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    Ticket Form
                                </div>
                            </button>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    Live Chat
                                </div>
                            </button>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-twitter fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    Twitter
                                </div>
                            </button>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-gears fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    API
                                </div>
                            </button>
                        </div>
                    </group><group>
                        <label for="id" string="Self-Service"/>
                        <div>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    Help Center
                                </div>
                            </button>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    eLearning
                                </div>
                            </button>
                        </div>
                    </group><group>
                        <label for="id" string="Engagement"/>
                        <div>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    Ratings
                                </div>
                            </button>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    SLA Policies
                                </div>
                            </button>
                        </div>
                    </group><group>
                        <label for="id" string="Productivity"/>
                        <div>
                            <button type="object" name="open_company" class="oe_box btn-default pull-left" style="margin-right: 12px">
                                <div class="fa fa-envelope-o fa-5x fa-border"/>
                                <div class="text-center mt8">
                                    Mail Templates
                                </div>
                            </button>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_team_act" model="ir.actions.act_window">
        <field name="name">Ticket Teams</field>
        <field name="res_model">helpdesk.team</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a new ticket team.
          </p><p>
            Teams allows to organize tickets.
          </p>
        </field>
    </record>
    <menuitem
        action="helpdesk_team_act"
        id="menu_helpdesk_team_act"
        sequence="1" parent="helpdesk.menu_helpdesk_config"/>

</openerp>
