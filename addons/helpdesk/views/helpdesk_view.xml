<?xml version="1.0"?>
<openerp>
    <data>
        <menuitem
            id="menu_helpdesk" name="Helpdesk" 
            groups="helpdesk.group_helpdesk_user"/>

        <menuitem
            id="menu_helpdesk_config" name="Configuration"
            sequence="100"
            parent="helpdesk.menu_helpdesk"/>

        <!-- Types -->
        <record id="helpdesk_type_search" model="ir.ui.view">
            <field name="name">Search Types</field>
            <field name="model">helpdesk.type</field>
            <field name="arch" type="xml">
                <search string="Type search">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="helpdesk_type_form" model="ir.ui.view">
            <field name="name">Helpdesk Types</field>
            <field name="model">helpdesk.type</field>
            <field name="arch" type="xml">
                <form string="type search">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </firm>
            </field>
        </record>

        <record id="helpdesk_type_act" model="ir.actions.act_window">
            <field name="name">Ticket Types</field>
            <field name="res_model">helpdesk.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new ticket type.
              </p><p>
                Types allows to organize tickets.
              </p>
            </field>
        </record>
        <menuitem
            action="helpdesk_type_act"
            id="menu_helpdesk_type_act"
            sequence="2" parent="helpdesk.menu_helpdesk_config"/>

        <!-- Tags -->
        <record id="helpdesk_tag_search" model="ir.ui.view">
            <field name="name">Search Tags</field>
            <field name="model">helpdesk.tag</field>
            <field name="arch" type="xml">
                <search string="tag search">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="helpdesk_tag_form" model="ir.ui.view">
            <field name="name">Helpdesk Tags</field>
            <field name="model">helpdesk.tag</field>
            <field name="arch" type="xml">
                <form string="tag search">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </firm>
            </field>
        </record>

        <record id="helpdesk_tag_act" model="ir.actions.act_window">
            <field name="name">Ticket Tags</field>
            <field name="res_model">helpdesk.tag</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new ticket tag.
              </p><p>
                Tags allows to organize tickets.
              </p>
            </field>
        </record>
        <menuitem
            action="helpdesk_tag_act"
            id="menu_helpdesk_tag_act"
            sequence="1" parent="helpdesk.menu_helpdesk_config"/>

        <!-- Stages -->
        <record id="helpdesk_stage_search" model="ir.ui.view">
            <field name="name">Search Stages</field>
            <field name="model">helpdesk.stage</field>
            <field name="arch" type="xml">
                <search string="stage search">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="helpdesk_stage_form" model="ir.ui.view">
            <field name="name">Helpdesk Stage</field>
            <field name="model">helpdesk.stage</field>
            <field name="arch" type="xml">
                <form string="stage search">
                    <sheet>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="is_open"/>
                        <field name="folded"/>
                    </sheet>
                </firm>
            </field>
        </record>

        <record id="helpdesk_stage_act" model="ir.actions.act_window">
            <field name="name">Stages</field>
            <field name="res_model">helpdesk.stage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to set a create stage in your helpdesk pipeline.
              </p><p>
                Stages will allow operators to easily track how a specific
                tickets are positioned in the process.
              </p>
            </field>
        </record>
        <menuitem
            action="helpdesk_stage_act"
            id="menu_helpdesk_stage_act"
            sequence="3" parent="helpdesk.menu_helpdesk_config" groups="base.group_no_one"/>

        <!-- Tickets -->
        <record id="helpdesk_tickets_search" model="ir.ui.view">
            <field name="name">Search Tickets</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <search string="Tickets Search">
                    <field name="name"/>

                    <field name="tag_ids"/>
                    <field name="type_id"/>

                    <field name="team_id"/>
                    <field name="user_id"/>
                </search>
            </field>
        </record>

        <record id="helpdesk_tickets_tree" model="ir.ui.view">
            <field name="name">Tickets</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <tree string="Tickets">
                    <field name="name"/>

                    <field name="partner_id"/>
                    <field name="responsible_id"/>

                    <field name="priority"/>
                    <field name="stage_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_helpdesk_ticket_kanban">
            <field name="name">Tickets</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column">
                    <field name="stage_id"/>
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="tag_ids"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                        <span class="fa fa-bars fa-lg"/>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                        <t t-if="widget.editable"><li><a type="edit">Edit</a></li></t>
                                        <t t-if="widget.deletable"><li><a type="delete">Delete</a></li></t>
                                        <li t-if="! record.active.value"><a name="action_set_active" type="object">Unarchive</a></li>
                                        <li t-if="record.active.value"><a name="action_set_unactive" type="object">Archive</a></li>
                                        <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <field name="tag_ids"/>
                                    </div>
                                    <div>
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_kanban_footer">
                                        <field name="priority" widget="priority"/>
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span class='oe_kanban_mail_new' title='Important Messages'><i class='fa fa-comments'/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                        </t>
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="helpdesk_ticket_form" model="ir.ui.view">
            <field name="name">Helpdesk tickets</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <form string="stage search">
                    <header>
                        <field name="stage_id" widget="statusbar"
                            clickable="True" options="{'fold_field': 'fold'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive"
                                    attrs="{'invisible': [('active', '=', True), ('probability', '&lt;', 100)]}">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Subject of the ticket..."/></h1>
                        </div>
                        <group>
                            <field name="partner_id"/>
                            <field name="type_id"/>
                            <field name="tag_ids"/>
                        </group><group>
                            <field name="team_id"/>
                            <field name="responsible_id"/>
                            <field name="priority"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <field name="note" placeholder="Description of the ticket..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </firm>
            </field>
        </record>

        <record id="helpdesk_ticket_act" model="ir.actions.act_window">
            <field name="name">Tickets</field>
            <field name="res_model">helpdesk.ticket</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,pivot,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click create a new ticket.
                </p>
            </field>
        </record>
        <menuitem
            action="helpdesk_ticket_act"
            id="menu_helpdesk_ticket_act"
            sequence="10" parent="helpdesk.menu_helpdesk"/>

        <!-- Reporting -->

        <record id="helpdesk_ticket_report_act" model="ir.actions.act_window">
            <field name="name">Reporting</field>
            <field name="res_model">helpdesk.ticket</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,pivot,kanban,tree,form</field>
        </record>
        <menuitem
            action="helpdesk_ticket_report_act"
            id="menu_helpdesk_ticket_report_act"
            sequence="20" parent="helpdesk.menu_helpdesk"/>


    </data>
</openerp>
