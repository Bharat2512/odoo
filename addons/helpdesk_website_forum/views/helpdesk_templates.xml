<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template name="Helpdesk" id="helpdesk_website_forum.home">
      <t t-call="website.layout">
        <div id="wrap" class="oe_structure oe_empty">
          <div class="carousel slide s_banner oe_custom_bg bg-primary mt0 mb16" data-interval="10000" id="myCarousel1452128225987" style="">
            <ol class="carousel-indicators hidden">
              <li class="active" data-slide-to="0" data-target="#myCarousel1452128225987"/>
            </ol>
            <div class="carousel-inner">
              <div class="item active oe_img_bg oe_custom_bg" style="background-image: url(/web/image/502); ; ; ; ; ; ">
                <div class="container">
                  <div class="row content">
                    <div class="carousel-content col-md-offset-3 col-md-6 mb64 mt64">
                      <h1 class="text-center">Odoo Forum</h1>
                        <div class="text-center">
                            <form class="navbar-form" role="search" t-attf-action="/forum/#{ slug(forum) }" method="get">
                                <t t-call="website.website_search_box"/>
                            </form>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="carousel-control left hidden" data-cke-saved-href="#myCarousel1452128225987" data-slide="prev" data-target="#myCarousel1452128225987" style="width: 10%">
              <i class="fa fa-chevron-left"/>
            </div>
            <div class="carousel-control right hidden" data-cke-saved-href="#myCarousel1452128225987" data-slide="next" data-target="#myCarousel1452128225987" style="width: 10%">
              <i class="fa fa-chevron-right"/>
            </div>
          </div>
          <section class="s_three_columns mb64 mt0">
            <div class="container">
              <div class="row">
                <t t-if="forum">
                    <t t-call="helpdesk_website_forum.forum_posts"/>
                </t>
                <div class="col-md-6">
                  <h2>Popular Presentations</h2>
                  <p class="o_default_snippet_text"> Delete the above image or replace it with a picture that illustrates your message. Click on the picture to change it's <em class="o_default_snippet_text">rounded corner</em> style. </p>
                </div>
              </div>
            </div>
          </section>
        </div>
      </t>
    </template>

    <template name="Top 10 Posts" id="helpdesk_website_forum.forum_posts">
        <div class="col-md-6">
          <h2>Popular Questions</h2>
          <p t-if="not questions" class="text-muted">
              No question yet, <a t-attf-href="/forum/#{ slug(forum) }/ask?post_type=question">create the first one</a>.
          </p>
          <p class="question-block" t-foreach="questions" t-as="question">
              <div class="question-name">
                  <a t-attf-href="/forum/#{ slug(forum) }/question/#{ slug(question) }">
                      <span t-field="question.name"/>
                  </a>
                  <t t-if="question.post_type == 'link'" >
                      <a title="Redirect to external link" t-att-href="question.content_link" class="text-muted"><i class="fa fa-external-link forum_link"/></a>
                  </t>
                  <span t-if="question.has_validated_answer" title="Question has accepted answer"><i class="fa fa-check-circle oe_answer_true"/></span>
              </div>
              <div><t t-raw="post_content"/></div>
              <t t-foreach="question.tag_ids" t-as="question_tag">
                  <a t-attf-href="/forum/#{ slug(forum) }/tag/#{slug(question_tag)}/questions">
                      <span t-attf-class="pull-right label #{tag and tag.name == question_tag.name and 'label-primary' or 'label-default'}" t-field="question_tag.name"
                          style="margin-right: 4px;"/>
                  </a>
              </t>
              <small class="text-muted">
                  <i t-if="question.post_type == 'question'" t-attf-class="fa fa-question-circle" t-att-title="question.post_type.capitalize()" />
                  <i t-if="question.post_type == 'discussion'" t-attf-class="fa fa-comments-o" t-att-title="question.post_type.capitalize()" />
                  <i t-if="question.post_type == 'link'" t-attf-class="fa fa-link" t-att-title="question.post_type.capitalize()" />
                  <span>By </span><span t-field="question.create_uid" t-field-options='{"widget": "contact", "country_image": true, "fields": ["name", "country_id"]}' style="display: inline-block;"/>
                  <span> • </span><span t-field="question.write_date" t-field-options='{"format":"short"}'/>
                  <span> • </span><span t-field="question.views" /> View<t t-if="question.views&gt;1">s</t>
              </small>
          </p>
        </div>
    </template>



</odoo>
