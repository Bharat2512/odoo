<?xml version="1.0" encoding="UTF-8"?>
 <openerp>
    <data>
        <!-- Add code field to existing emlpoyee form view -->
        <record model="ir.ui.view" id="employee_code_form_view">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="category_ids" position="after">
                    <group>
                        <field name="last_check" groups="base.group_hr_user"/>
                        <field name="state"/>  <!-- change to green/red dot ??? -->
                    </group>
                </field>
                <field name="user_id" position="after">
                    <field name="barcode" groups="base.group_hr_user"/>
                </field>
            </field>
        </record>

    </data>
</openerp>