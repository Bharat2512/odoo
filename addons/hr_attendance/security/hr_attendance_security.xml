<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="base.group_hr_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('base.group_hr_attendance'))]"/>
        </record>
        <record id="base.group_hr_attendances_manual" model="res.groups">
            <field name="name">Manual Attendances</field>
            <field name="comment">the user will be able to check in and out manually (button in the top right menu).</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('base.group_hr_attendance'))]"/>
        </record>
        <record id="hr_attendance_rule_attendance_manager" model="ir.rule">
            <field name="name">Manager Attendance</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('base.group_hr_manager')), (4,ref('base.group_hr_user'))]"/>
        </record>
        <record id="hr_attendance_rule_attendance_employee" model="ir.rule">
            <field name="name">Employee Attendance</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_hr_attendances_manual'))]"/>
        </record>

    </data>
</odoo>
