<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">
    <t t-name="AttendanceSlider">
        <li class="oe_attendance_status" data-toggle="tooltip">
             <a href="#" class="oe_attendance_sign_in_out">
                <i id="oe_attendance_sign_in_out_icon" class="fa fa-sign-in"/>
            </a>
        </li>
    </t>

    <t t-name="FieldPresenceIndicator">
        <div class="o_attendance_field_presence_indicator">
        </div>
    </t>

    <t t-name="HrAttendanceMainMenu">
        <div class="o_hr_attendance_main_menu_container">
            <div class="o_hr_attendance_main_menu">
                <h1>Welcome To <div class="o_hr_attendance_my_company"></div></h1>
                <div class="o_hr_attendance_company_logo"></div>
                <h3>To check in scan your badge</h3>
                <h5>or click on Employees and enter your PIN.</h5>
                <button class="button_employees btn btn-primary btn-sm">Employees</button>
                <button class="button_inventory btn btn-primary btn-sm">Visitor</button>
                <div class="o_hr_attendance_clock"></div>
            </div>
        </div>
    </t>

    <t t-name="HrAttendanceMessage">
        <div class="o_hr_attendance_message_container">
            <div class="o_hr_attendance_message">
                <h3 class="o_hr_attendance_validation"></h3>
                <h2 class="o_hr_attendance_message_message"></h2>
                <div class="o_hr_attendance_message_time"></div>
                <h3 class="o_hr_attendance_random_message"></h3>
                <button class="button_dismiss btn btn-primary btn-sm">ok</button>
            </div>
        </div>
    </t>
</template>
