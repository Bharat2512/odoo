<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hr_timesheet_report_search" model="ir.ui.view">
            <field name="name">hr.timesheet.report.search</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.view_hr_timesheet_report_search"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='project_id']" position="after">
                        <filter string="Draft" domain="[('sheet_id.state','=','draft')]"/>
                        <filter string="Confirmed" domain="[('sheet_id.state','=','confirm')]"/>
                        <filter string="Done" domain="[('sheet_id.state','=','done')]"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
