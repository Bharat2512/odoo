<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Resource: account.tax.code.template
    Account tax code templates for Costa Rica
    -->
    <record id="transfer_account_0_id" model="account.account.template">
        <field name="name">cuenta de Transferencia</field>
        <field name="code">0001</field>
        <field name="reconcile" eval="True"/>
        <field ref="account.data_account_type_current_assets" name="user_type_id"/>
    </record>

    <record id="account_chart_template_0" model="account.chart.template">
        <field name="name">Costa Rica - Company 0</field>
        <field name="code_digits">6</field>
        <field name="bank_account_code_prefix">102</field>
        <field name="cash_account_code_prefix">103</field>
        <field name="currency_id" ref="base.CRC"/>
        <field name="transfer_account_id" ref="transfer_account_0_id"/>
    </record>

    <record id="transfer_account_0_id" model="account.account.template">
        <field name="chart_template_id" ref="account_chart_template_0"/>
    </record>

</odoo>
