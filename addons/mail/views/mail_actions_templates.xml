<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="mail_actions" name="Invitation View">
    <t t-call="mail.mail_actions_layout">
        <div class="jumbotron text-center">
            <t t-if="not error">
                <h1><small>Action is perfomed successfully!</small></h1>
                <p>Thank you.</p>
            </t>
            <t t-if="error">
                <span t-raw="error"/>
                <p>Kindly contact your system administrator. Thank you! </p>
            </t>
            <p>
                <a t-att-href="base_url" class="btn btn-primary">Go to Home</a>
            </p>
        </div>
    </t>
</template>
<template id="mail_unsubscribe" name="Unsubscribe View">
    <t t-call="mail.mail_actions_layout">
        <div class="container mt8">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <t t-if="not error">
                        <h1 class="page-header text-center">Mailing Subscriptions</h1>

                        <div class="alert alert-success text-center">
                            <p>You have successfully unsubscribed.</p>
                        </div>
                    </t>
                    <t t-if="error">
                        <span t-raw="error"/>
                        <p>Kindly contact your system administrator. Thank you! </p>
                    </t>
                </div>
            </div>
        </div>
    </t>
</template>
</odoo>
