<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="mail_actions" name="Invitation View">
    <t t-call="mail.mail_actions_layout">
        <div class="jumbotron text-center">
            <t t-if="not access_error">
                <h1><small>Action is perfomed successfully!</small></h1>
            </t>
            <t t-if="access_error">
                <span t-raw="access_error"/>
                <p>Please contact your system administrator. </p>
            </t>
            <p>Thank you.</p>
            <p>
                <a t-att-href="base_url" class="btn btn-primary">Go to Home</a>
            </p>
        </div>
    </t>
</template>
<template id="mail_subscriptionchange" name="Unsubscribe View">
    <t t-call="mail.mail_actions_layout">
        <div class="container mt8">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <h1 class="page-header text-center">Mailing Subscriptions</h1>
                    <div t-attf-class="alert #{ not error_message and 'alert-success' or 'alert-danger'} text-center">
                        <p>Hello <span t-esc="user"/>,
                            <t t-if="mail_subscribe">
                                You have successfully subscribed the following document : <br/>
                                <strong t-esc="doc_name"/>
                            </t>
                            <t t-if="mail_unsubscribe">
                                You have successfully unsubscribed the following document : <br/>
                                <strong t-esc="doc_name"/>
                            </t>
                        </p>
                        <p>Thank you.</p>
                        <p>
                            <a t-att-href="base_url" class="btn btn-link">Go to Home</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
</odoo>
