<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_channel_admin_bot" model="mail.channel">
            <field name="name">Jack bot, Administrator</field>
            <field name="public">private</field>
            <field name="channel_type">chat</field>
            <field name="channel_partner_ids" eval="[(6, 0, [ref('base.res_partner_bot'), ref('base.partner_root')])]"/>
        </record>

        <record model="mail.message" id="mail_message_admin_first_message">
            <field name="model">mail.channel</field>
            <field name="res_id" ref="mail_channel_admin_bot"/>
            <field name="message_type">notification</field>
            <field name="author_id" ref="base.res_partner_bot"/>
            <field name="subject">Hi buddy!</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="body"><![CDATA[<p>Hello, My name is Jack Bot. I here to help you discover Odoo Discuss. (Be kind with me, I’m still just a bot after all!) Type ​<b>something</b>​ to get started.</p>]]>
            </field>
        </record>
    </data>
</odoo>