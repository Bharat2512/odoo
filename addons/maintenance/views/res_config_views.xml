<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_config_settings_view_form" model="ir.ui.view">
        <field name="name">maintenance.config.settings</field>
        <field name="model">maintenance.config.settings</field>
        <field name="arch" type="xml">
            <form string="Configure Equipments Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                </header>
                <group string="Track Equipments" name="equipment_grp">
                    <label for="id" string="Requests Alias"/>
                    <div>
                        <label for="maintenance_alias_prefix" class="oe_inline"/>
                        <div>
                            <label for="id" id="the following alias to report internal equipment issue"/> 
                            <field name="maintenance_alias_prefix" class="oe_inline"/>@
                            <field name="alias_domain" class="oe_inline" readonly="1"/>
                        </div>
                    </div>
                </group>
            </form>
        </field>
    </record>

    <record id="action_maintenance_configuration" model="ir.actions.act_window">
        <field name="name">Configure Maintenance</field>
        <field name="res_model">maintenance.config.settings</field>
        <field name="view_id" ref="maintenance_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>
