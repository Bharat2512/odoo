<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        
        <!--  Produce -->
        
        <record id="view_mrp_product_produce_wizard" model="ir.ui.view">
            <field name="name">MRP Product Produce</field>
            <field name="model">mrp.product.produce</field>
            <field name="arch" type="xml">
                <form string="Produce">
                    <group>
                        <group>
                            <label for="product_qty"/>
                            <div class="o_row">
                                <field name="product_qty" colspan="2" attrs="{'readonly': [('serial', '=', True)]}"/>
                                <field name="product_uom_id" readonly="1"/>
                            </div>
                            <field name="product_id" invisible="1"/>
                            <field name="tracking" invisible="1"/>
                            <field name="serial" invisible="1"/>
                            <field name="lot_id" domain="[('product_id', '=', product_id)]"
                                        context="{'default_product_id':product_id}"
                                        attrs="{'invisible': [('tracking', '=', 'none')], 'required': [('tracking', '!=', 'none')]}"
                                        groups="stock.group_production_lot"/>
                        </group>
                        <field name="consume_line_ids">
                            <tree editable="bottom">
                                <field name="product_id" readonly="1"/>
                                <field name="lot_id" domain="[('product_id', '=', product_id)]" context="{'default_product_id': product_id}"/>
                                <field name="tracking" invisible="1"/>
                                <field name="product_qty"/><!-- attrs="{'invisible': [('tracking', '=', 'serial')]}" -->
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="do_produce" type="object" string="Consume &amp; Produce" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_mrp_product_produce" model="ir.actions.act_window">
            <field name="name">Produce</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.product.produce</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>    
        
        
</odoo>
