<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        
        <!--  Produce -->
        
        <record id="view_mrp_product_produce_wo_wizard" model="ir.ui.view">
            <field name="name">MRP Product Produce on Work Order</field>
            <field name="model">mrp.product.produce.wo</field>
            <field name="arch" type="xml">
                <form string="Produce">
                    <div class="o_row">
                        <label for="product_id"/>
                        <field name="product_id"/>
                    </div>
                    <div class="o_row">
                        <label for="product_qty" />
                        <field name="product_qty"/>
                        <field name="product_uom_id"/>
                    </div>
                    <footer>
                        <button name="do_produce" type="object" string="Confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_mrp_product_produce_wo" model="ir.actions.act_window">
            <field name="name">Produce</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.product.produce.wo</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>
