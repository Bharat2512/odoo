<?xml version="1.0" ?>
<odoo>
    <data>
        <!-- volume is always sent in milliliter to blackbox -->
        <record id="product.product_uom_millilitre" model="product.uom">
            <field name="name">Milliliter(s)</field>
            <field name="category_id" ref="product.product_uom_categ_vol"/>
            <field name="factor">1000</field>
            <field name="uom_type">smaller</field>
        </record>
        <record id="product_product_work_in" model="product.product">
            <field name="name">Work In</field>
            <field name="standard_price">0.0</field>
            <field name="list_price">0.0</field>
            <field name="type">consu</field>
            <field name="uom_id" ref="product.product_uom_unit"/>
            <field name="uom_po_id" ref="product.product_uom_unit"/>
            <field name="taxes_id" eval="[(6, 0, [ref('l10n_be.attn_VAT-OUT-00-L')])]"/>
        </record>
        <record id="product_product_work_out" model="product.product">
            <field name="name">Work Out</field>
            <field name="standard_price">0.0</field>
            <field name="list_price">0.0</field>
            <field name="type">consu</field>
            <field name="uom_id" ref="product.product_uom_unit"/>
            <field name="uom_po_id" ref="product.product_uom_unit"/>
            <field name="taxes_id" eval="[(6, 0, [ref('l10n_be.attn_VAT-OUT-00-L')])]"/>
        </record>

        <!-- read-only user that minfin functionaries can use to export data -->
        <record id="fdm_functionary" model="res.partner">
            <field name="name">FDM functionary</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="customer" eval="False"/>
            <field name="country_id" ref="base.be"/>
        </record>

        <record id="fdm_functionary_user" model="res.users">
            <field name="partner_id" ref="fdm_functionary"/>
            <field name="login">fdm_functionary</field>
            <field name="password">1</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('base.group_user'), ref('group_minfin_functionary')])]"/>
        </record>
    </data>
</odoo>
