<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_enterprise_config_settings" model="ir.ui.view">
        <field name="name">stock enterprise settings</field>
        <field name="model">stock.config.settings</field>
        <field name="inherit_id" ref="stock.view_stock_config_settings"/>
        <field name="arch" type="xml">
            <group name="traceability" position="after">
                <group>
                    <field name="barcode_support" class="oe_inline" widget="upgrade_radio"/>
                    <field name="extra_shipping" class="oe_inline" widget="upgrade_radio"/>
                    <field name="multi_company" class="oe_inline" widget="upgrade_radio"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
