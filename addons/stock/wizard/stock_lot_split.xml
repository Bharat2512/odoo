<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_lot_split" model="ir.ui.view">
        <field name="name">Split Lot</field>
        <field name="model">stock.lot.split</field>
        <field name="arch" type="xml">
            <form string="Split in Lots">
                <group string="What?">
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="qty_done"/>
                </group>
                <group string="Lots">
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="product_qty"/>
                            <field name="lot"/>
                            <field name="lot_id" domain="[('product_id','=', parent.product_id)]"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="process" string="_Apply" type="object" class="oe_highlight"/>
                    or
                    <button string="_Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="lot_split" model="ir.actions.act_window">
        <field name="name">Lot Split</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.lot.split</field>
        <field name="view_id" ref="view_lot_split"/>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>