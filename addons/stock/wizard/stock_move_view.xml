<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--  Scrap move -->

       <record id="view_stock_picking_scrap_wizard" model="ir.ui.view">
            <field name="name">Scrap Move</field>
            <field name="model">stock.picking.scrap</field>
            <field name="arch" type="xml">
                <form string="Scrap Products">
                    <group>
                        <field name="picking_id" invisible="1"/>
                        <field name="type"/>
                        <field name="location_id" attrs="{'invisible': [('type', '!=', 'location')]}"/>
                        <field name="scrap_location_id" string="Scrap Location" widget="selection"
                            domain="[('usage','!=','view'),('scrap_location','=',True)]" groups="stock.group_locations"/>
                    </group>
                    <group>
                        <field name="line_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="location_id"/>
                                <field name="product_id"/>
                                <field name="package_id"/>
                                <field name="lot_id"/>
                                <field name="product_qty"/>
                                <field name="scrap_qty"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="button_scrap" string="Scrap" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="picking_scrap" model="ir.actions.act_window">
            <field name="name">Scrap</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking.scrap</field>
            <field name="view_id" ref="view_stock_picking_scrap_wizard"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'form_view_ref': False}</field>
        </record>

    </data>
</openerp>
