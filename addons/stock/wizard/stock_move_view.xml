<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--  Scrap move -->

       <record id="view_stock_picking_scrap_wizard" model="ir.ui.view">
            <field name="name">Scrap Move</field>
            <field name="model">stock.scrap.wizard</field>
            <field name="arch" type="xml">
                <form string="Scrap Products">
                    <group>
                        <group>
                            <field name="product_id"/>
                            <!-- <field name="product_qty"/> -->
                            <field name="scrap_qty"/>
                        </group>
                        <group>
                            <field name="lot_id"/>
                            <field name="scrap_location_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="button_scrap" string="Scrap" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="picking_scrap" model="ir.actions.act_window">
            <field name="name">Scrap</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.scrap.wizard</field>
            <field name="view_id" ref="view_stock_picking_scrap_wizard"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'form_view_ref': False}</field>
        </record>

    </data>
</openerp>
