<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_put_in_pack" model="ir.ui.view">
        <field name="name">Put in Pack</field>
        <field name="model">stock.put.in.pack</field>
        <field name="arch" type="xml">
            <form string="Enter Pack Details">
                <group>
                    <p>Pack Created.  If necessary, change the name below (e.g. by scanning):</p>
                    <field name="name" nolabel="1"/>
                </group>
                <footer>
                    <button name="process" string="_Apply" type="object" class="oe_highlight"/>
                    or
                    <button string="_Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_put_in_pack" model="ir.actions.act_window">
        <field name="name">Put in Pack</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.put.in.pack</field>
        <field name="view_id" ref="view_put_in_pack"/>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>