<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_invoice_onshipping" model="ir.ui.view">
        <field name="name">view_stock_invoice_onshipping</field>
        <field name="model">stock.invoice.onshipping</field>
        <field name="inherit_id" ref="stock_account.view_stock_invoice_onshipping"/>
        <field name="arch" type="xml">
            <field name="invoice_type" position="replace">
                <field name="wizard_title" attrs="{'invisible': [('warning_message', '!=', False)]}"/>
            </field>
            <group name="invoice_data" position="attributes">
                <attribute name="attrs">{'invisible': [('warning_message', '!=', False)]}</attribute>
            </group>
            <span name="footer" position="attributes">
                <attribute name="attrs">{'invisible': [('warning_message', '!=', False)]}</attribute>
            </span>
            <span name="footer" position="before">
                <button special="cancel" string="OK" attrs="{'invisible': [('warning_message', '=', False)]}" class="oe_link"/>
            </span>
            <group name="invoice_data" position="after">
                <field name="warning_message" attrs="{'invisible': [('warning_message', '=', False)]}" readonly="1"/>
            </group>
            <field name="journal_id" position="attributes">
                <attribute name="domain">[('type', '=', 'purchase')]</attribute>
            </field>
            <field name="journal_id" position="after">
                <field name="need_two_invoices" invisible="1"/>
                <field name="second_journal_id"
                    domain="[('type', '=', 'sale')]"
                    attrs="{'invisible': [('need_two_invoices', '=', False)],
                            'required': [('need_two_invoices', '=', True)]}"/>
            </field>
        </field>
    </record>
</odoo>
