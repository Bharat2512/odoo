<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="planner_view_list" model="ir.ui.view">
        <field name="name">planner.view.list</field>
        <field name="model">planner.planner</field>
        <field name="arch" type="xml">
            <tree string="Planner" editable="True">
                <field name="name"/>
                <field name="menu_id" readonly="True"/>
                <field name="progress" readonly="True"/>
                <field name="planner_application"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="planner_view_search" model="ir.ui.view">
        <field name="name">planner.view.search</field>
        <field name="model">planner.planner</field>
        <field name="arch" type="xml">
            <search string="Planner">
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="unactive" string="Unactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="planner_action" model="ir.actions.act_window">
        <field name="name">Planner</field>
        <field name="res_model">planner.planner</field>
        <field name="view_type">form</field>
        <field name='view_mode'>tree</field>
        <field name="view_id" ref="planner_view_list"/>
        <field name="context">{'search_default_active': True}</field>
        <field name="search_view_id" ref="planner_view_search"/>
    </record>

    <menuitem id="planner_menu"  action="planner_action"  parent="base.next_id_2" sequence="6"/>

</odoo>