<templates id="template" xml:space="preserve">
    <t t-name="website.social_share">
        <div class="row clearfix">
            <div class="col-xs-12">
                <div t-attf-id="#{id}" class="css_editable_mode_hidden">
                    <t t-foreach="medias" t-as="media">
                        <a style="cursor: pointer" t-attf-class="fa-stack fa-lg share" t-attf-data-media="#{media}" >
                            <span class="fa fa-square fa-stack-2x"></span>
                            <span t-attf-class="fa fa-#{media} fa-stack-1x fa-inverse"></span>
                        </a>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>