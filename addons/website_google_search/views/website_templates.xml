<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="layout" inherit_id="website.layout" name="Google Search Main Layout">
            <xpath expr="//head" position="inside">
                <t t-if="website and website.google_search_published">
                    <script type="text/javascript" src="/website_google_search/static/src/js/website_google_search.js"></script>
                    <link rel="stylesheet" href="/website_google_search/static/src/css/website_google_search.css"/>
                </t>
            </xpath>
            <xpath expr="//t[@t-foreach='website.menu_id.child_id']" position="before">
                <t t-if="website and website.google_search_published">
                    <li class="google_search_box">
                        <form>
                            <input type="text" autocomplete="off" name="q"></input>
                            <input type="hidden" name="cx" t-att-value="website.google_search_cx"></input>
                            <input type="hidden" name="key" t-att-value="website.google_search_key"></input>
                            <a class="fa fa-search a-submit"/>
                        </form>
                        <ul class="google_search_results">
                        </ul>
                    </li>
                    <li class="divider"/>
                </t>
            </xpath>
        </template>

    </data>
</openerp>
