            <field name="model">sale.quote.template</field>
            <field name="inherit_id" ref="website_quote.view_sale_quote_template_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='quote_line']/tree//field[@name='product_id']" position="after">
                         <field name="sale_layout_cat_id"/>
                    </xpath>
                    <xpath expr="//field[@name='quote_line']/form//field[@name='product_id']" position="after">
                        <field name="sale_layout_cat_id"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
